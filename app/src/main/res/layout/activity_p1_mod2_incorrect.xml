<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="77dp"
        android:background="@drawable/mark_incorrect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="86dp"
        android:text="오답입니다!"
        android:textColor="@color/black"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView11" />

    <TextView
        android:id="@+id/textView47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="127dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="128dp"
        android:text="조금 더 연습하세요"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView46" />


    <Button
        android:id="@+id/btn_bk"
        android:layout_width="119dp"
        android:layout_height="63dp"
        android:layout_marginStart="137dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/browser_actions_bg_grey"
        android:text="뒤로 가기"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btn_tryagain"
        android:layout_width="155dp"
        android:layout_height="77dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="89dp"
        android:background="@drawable/tryagain"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/btn_bk"
        app:layout_constraintEnd_toStartOf="@+id/btn_solution"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/tryagain" />

    <ImageButton
        android:id="@+id/btn_solution"
        android:layout_width="157dp"
        android:layout_height="80dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="86dp"
        android:background="@drawable/solution"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/btn_bk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_tryagain"
        app:srcCompat="@drawable/solution" />




</androidx.constraintlayout.widget.ConstraintLayout>