<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/test_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="학습리포트"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <org.eazegraph.lib.charts.VerticalBarChart
            android:id="@+id/score_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:egBarWidth="30dp"
            app:egFixedBarWidth="true"
            android:padding="20dp"
            app:egShowValues="true"
            app:egUseMaximumValue="true"
            app:egShowDecimal="false"
            app:egShowBarLabel="false"
            app:egLegendHeight="0dp"
        />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="문장의 답변 유사도"
                android:padding="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="발음"
                android:padding="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="유창성"
                android:padding="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="표현력"
                android:padding="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="문장의 적절성"
                android:padding="20dp"/>

        </LinearLayout>
    </FrameLayout>



</LinearLayout>