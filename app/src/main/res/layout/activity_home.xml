<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/app_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI 튜터와 함께하는 한국어 회화 공부"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom|right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/test_start_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/purple_rec"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="실전 모의고사\nTest"
                    android:textColor="@color/white"
                    android:textSize="21dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="START"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="bottom|right" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/prac_start_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/orange_rec"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="파트별 연습\nPractice"
                    android:textSize="21dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="START"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="bottom|right" />

            </FrameLayout>

        </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="16dp">


        <ImageView
            android:id="@+id/imageV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/daily_rec" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:text="Daily 사자성어 연습\n학습 소요시간 3-10 Min"
            android:textColor="@color/text_color_wh"
            android:textSize="16sp" />

    </FrameLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="21dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="5dp"
                android:text="오늘의 추천 학습"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="170dp"
                        android:layout_height="200dp"
                        android:background="@drawable/rec_study_ex1"
                        android:scaleType="fitCenter" />

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="170dp"
                        android:layout_height="200dp"
                        android:background="@drawable/rec_study_ex2"
                        android:scaleType="fitCenter" />

                    <ImageButton
                        android:id="@+id/imageButton3"
                        android:layout_width="170dp"
                        android:layout_height="200dp"
                        android:background="@drawable/rec_study_ex1"
                        android:scaleType="fitCenter" />

                    <ImageButton
                        android:id="@+id/imageButton4"
                        android:layout_width="170dp"
                        android:layout_height="200dp"
                        android:background="@drawable/rec_study_ex2"
                        android:scaleType="fitCenter" />

                    <ImageButton
                        android:id="@+id/imageButton6"
                        android:layout_width="170dp"
                        android:layout_height="200dp"
                        android:background="@drawable/rec_study_ex1"
                        android:scaleType="fitCenter" />

                    <ImageButton
                        android:id="@+id/imageButton5"
                        android:layout_width="170dp"
                        android:layout_height="200dp"
                        android:background="@drawable/rec_study_ex2"
                        android:scaleType="fitCenter" />

                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>


    </LinearLayout>
